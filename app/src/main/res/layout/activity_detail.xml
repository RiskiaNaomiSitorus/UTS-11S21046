<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/riskia_app_name"
    tools:context=".DetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">
        <ImageView
            android:id="@+id/dinosaurusriskia_icon_riskia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/info_sm_icon"
            android:src="@drawable/ceratopsia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />
        <TextView
            android:id="@+id/dinosaurusriskia_name_riskia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_sm_name"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf=
                "@+id/dinosaurusriskia_icon_riskia" />
        <TextView
            android:id="@+id/dinosaurusriskia_desc_riskia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/info_sm_desc"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf=
                "@+id/dinosaurusriskia_name_riskia" />

        <TextView
            android:id="@+id/dinosaurusriskia_karakteristik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Karakteristik fisik Dino"
            app:layout_constraintTop_toBottomOf="@+id/dinosaurusriskia_desc_riskia"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/dinosaurusriskia_Periodehidup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periode hidup Dino"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.849"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dinosaurusriskia_desc_riskia"
            app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/dinosaurusriskia_habitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Habitat dan Lingkungan Dino"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dinosaurusriskia_karakteristik"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dinosaurusriskia_makanan"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_marginEnd="72dp"
            android:text="Perilaku dan Lingkungan"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="251dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
